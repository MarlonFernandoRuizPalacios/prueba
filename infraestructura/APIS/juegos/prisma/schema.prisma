generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Juego {
  id          Int      @id @default(autoincrement())
  nombre      String
  tipo        String
  apuestaMin  Float
  apuestaMax  Float
  tasaPago    Float // Tasa para calcular los pagos en caso de ganar
  apuestas    Apuesta[] // Relaci칩n con las apuestas realizadas en este juego
}

model Apuesta {
  id        Int     @id @default(autoincrement())
  juegoId   Int
  monto     Float
  resultado Boolean
  pago      Float

  // Relaci칩n con el juego
  juego     Juego   @relation(fields: [juegoId], references: [id])
  
  // Fecha de creaci칩n para registrar cu치ndo se hizo la apuesta
  createdAt DateTime @default(now())
}